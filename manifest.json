{
  "manifest_version": 2,

  "name": "Twitch Auto Looter",
  "version": "2.0.0",
  "description": "Twitch Auto Channel points looter!",
  "icons": {"128": "icon.png"},
  "permissions": ["https://*.twitch.tv/*"],
  "short_name": "Twitch Looter",
  "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Twitch Auto Looter"
  },
  "content_scripts": [
      {
        "matches": ["https://*.twitch.tv/*"],
          "js": ["main.js"],
          "run_at": "document_end"
      }
  ]
}